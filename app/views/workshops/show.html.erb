<div class="top-margin">
	<div class="container">
		<div class="row">
			<div class="col-xs-12 inline-icons">
				<%= link_to workshops_path do %>
					<p><i class="fa fa-chevron-circle-left space-right" aria-hidden="true"></i>Revenir Ã  la liste</p>
				<% end %>
