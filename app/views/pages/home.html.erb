<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.2) 0%, rgba(0,36,61,0.4) 50%), url(<%= image_path 'mer-groupe.jpg'%>)"%>
  <div class="banner-content">
    <h1 class="handwritten">Sentiers de Soi</h1>
    <p>à Belle-Ile-en-Mer</p>
    <a href="#section02" class="btn btn-primary-white btn-lg">
      Découvrir
    </a>
  </div>
</div>




<script type="text/javascript">
  var elem = document.createElement('script');
  elem.onload = function () {
    jQuery(document).ready(function () {
      $('a[href*=#]').on('click', function(e) {
        e.preventDefault();
        $('html, body').animate({ scrollTop: $($(this).attr('href')).offset().top}, 'slow');
      });
    });
  };
</script>



